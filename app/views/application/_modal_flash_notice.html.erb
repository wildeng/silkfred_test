<div id="modalFlashMessage" class="modal fade " role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content <%= flashclass %>" id="modalFlashContent">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body" id="modalFlashBody">
        <p><%= markup_content %></p>
      </div>
    </div>

  </div>
</div>
